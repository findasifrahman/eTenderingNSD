
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Admin";
}
<style>
    @@import url(https://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic);



.transition {
        z-index: 0;
  transition: .3s cubic-bezier(.3, 0, 0, 1.3)
}

.card {
    z-index: 0;
  background-color: dodgerblue;
  height: 200px;
  width: 300px;
  position: relative;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
  overflow: hidden;
}

.card:hover {
  box-shadow: 0px 30px 30px rgba(0,0,0,0.2);
  height: 230px;
  width: 330px;
}

.card_circle {
  height: 200px;
  width: 300px;

  position: relative;
  border-radius: 50%;
  margin-left: 0px;
  margin-top: -20px;
}

.card:hover .card_circle {
  border-radius: 0;
  margin-top: -130px;
}

h2 {
  text-align: center;
  margin-top: 30px;
  position: absolute;

  font-size: 26px;
  color: #fff;
  width: 100%;
  font-family: 'Noto Sans', serif;
}

h2 small {
  font-weight: normal;
  font-size: 65%;
  color: rgba(0,0,0,0.5);
}

.card:hover h2 {
  margin-top: 50px;
  color: #fff;
}

.card:hover h2 small {
  color: #fff;
}

.cta-container {
  text-align: center;
  margin-top: 120px;
  position: absolute;

  width: 100%;
  font-family: 'Noto Sans', serif;
}

.cta {
  color: #fff;
  border: 2px solid black;
  background-color: black;
  padding: 10px 25px;
  border-radius: 50px;
  font-size: 17px;
  text-decoration: none;
  font-weight: bold;
}

.card:hover .cta-container {
  margin-top: 150px;

}


.hello {
    background-color: dodgerblue;
    width: 250px;
    border: 1px solid black;
    padding: 5px;
    margin: 5px;
    font-family:Tahoma;
    color:darkblue;
        
}
</style>


@if (User.IsInRole("Admin") || User.IsInRole("IT"))
{
    <div class="panel panel-danger">
        <h4 style="text-align:center;color:darkblue">Welcome Administrator</h4>
    </div>
        <div class="container">
            <br/><br />
            <div class="row">
                <div class="col-md-1 col-lg-1"></div>
                <a href="/ProcurementAndTenderModels/CSTApprovalIndex">
                    <div class="col-md-5 col-lg-5 col-xs-5 card transition">
                        <h2 class="transition">@ViewBag.cstApproaval <br><small style="color:yellow;font-weight:bolder">Awaiting for CST Approval</small></h2>
                        <div class="cta-container transition"><a href="/ProcurementAndTenderModels/CSTApprovalIndex" class="cta">View List</a></div>
                        <div class="card_circle transition"></div>
                    </div>
                </a>

                <div class="col-md-3 col-lg-3"></div>

                <div class="col-md-4 col-lg-4 col-xs-4 card transition">
                    <h2 class="transition">@ViewBag.notYetSupplied <br><small style="color:yellow;font-weight:bolder">Not Yet Supplied</small></h2>
                    <div class="cta-container transition"><a href="/ProcurementAndTenderModels/NotYetSuppliedReport" class="cta">View List</a></div>
                    <div class="card_circle transition"></div>
                </div>

             </div>

            <br/><br /> 
            <div class="row">
                <div class="col-md-1 col-lg-1"></div>

                <div class="col-md-5 col-lg-5 col-xs-5 card transition">
                    <h2 class="transition">@ViewBag.notYetInspected <br><small style="color:yellow;font-weight:bolder">Not Yet Inspected</small></h2>
                    <div class="cta-container transition"><a href="/ProcurementAndTenderModels/NotYetInspected" class="cta">View List</a></div>
                    <div class="card_circle transition"></div>

                </div>
                <div class="col-md-3 col-lg-3"></div>

                    <div class="col-md-4 col-lg-4 col-xs-4 card transition">
                        <h2 class="transition">@ViewBag.InspectedResult <br><small style="color:yellow;font-weight:bolder">Inspected Result</small></h2>
                        <div class="cta-container transition"><a href="/ProcurementAndTenderModels/InspectedResult" class="cta">View List</a></div>
                        <div class="card_circle transition"></div>
                    </div>

            </div>
        </div>
}